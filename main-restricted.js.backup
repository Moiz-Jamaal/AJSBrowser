      contextIsolation: true,
      devTools: true, // Enable DevTools like Chrome
      webSecurity: true,
      sandbox: true
    },
    autoHideMenuBar: false,
    fullscreenable: true,
    title: 'AJS Browser',
    alwaysOnTop: false, // Normal window behavior
    kiosk: false,
